rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'stat');
      allow read: if request.auth != null && request.auth.token.role == 'viewer'
    }
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.token.role == 'admin';
      allow create: if request.resource.data.role == '';
    }
  }
}

